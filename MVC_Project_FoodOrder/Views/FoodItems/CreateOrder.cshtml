@model MVC_Project_FoodOrder.Models.Order
@{
    ViewBag.Title = "CreateOrder";
}


<h2>CreateOrder</h2>
<div class="row">
    <div class="col-12">
        @using (Html.BeginForm("CreateOrder", "FoodItems", FormMethod.Post))
        {

            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.FoodItemId, new { @class = "col-from-label col-2 text-end" })
                <div class="col-4">
                    @Html.DropDownListFor(x => x.FoodItemId, new SelectList(ViewBag.FoodItems, "FoodItemId", "FoodName"), "Select order", new { @class = "form-select" })
                    @Html.ValidationMessageFor(x => x.FoodItemId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.OrderDate, new { @class = "col-form-lable col-2 text-end" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.OrderDate, new { @class = "form-control",type="date" })
                    @Html.ValidationMessageFor(x => x.OrderDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Quantity, new { @class = "col-form-lable col-2 text-end" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" ,type="number"})
                    @Html.ValidationMessageFor(x => x.Quantity, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.OrderType, new { @class = "col-form-lable col-2 text-end" })
                <div class="col-4">
                    @Html.EnumDropDownListFor(x => x.OrderType, new { @class = "form-select" })
                    @Html.ValidationMessageFor(x => x.OrderType, "", new { @class = "text-danger" })
                </div>
            </div>


            <button type="submit" name="act" value="add" class="btn btn-info">Save</button>
        }
    </div>
</div>

